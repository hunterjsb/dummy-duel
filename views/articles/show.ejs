</head>

<body>
  <div class="container">
    <a href="/" class="btn btn-secondary">All Articles</a>
    <a href="/articles/edit/<%= argument.id %>" class="btn btn-info">Edit</a>
    <h1 class="mb-1">
      <%= argument.title %>
    </h1>
    <div class="text-muted mb-2">
      <%= argument.createdAt.toLocaleDateString() %>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= argument.title %> </h5>
            <p class="card-text"> <%= argument.description %> </p>
            <a href="#" class="btn btn-primary">Read Article</a>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= argument.title %> </h5>
            <p class="card-text"> <%= argument.description %> </p>
            <a href="#" class="btn btn-primary">Read Article</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>